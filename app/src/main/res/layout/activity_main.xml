<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chi_gitanalyz.gitanalyzator.ui.MainActivity">

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butSignUp"
        android:layout_below="@+id/butSignIn"
        android:layout_alignRight="@+id/butSignIn"
        android:layout_alignEnd="@+id/butSignIn"
        android:visibility="visible"
        android:layout_alignLeft="@+id/butSignIn"
        android:layout_alignStart="@+id/butSignIn" />

    <Button
        android:text="SIGN OUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butSignUp"
        android:id="@+id/butSignOut"
        android:layout_alignRight="@+id/butSignUp"
        android:layout_alignEnd="@+id/butSignUp"
        android:layout_alignLeft="@+id/butSignUp"
        android:layout_alignStart="@+id/butSignUp"
        android:visibility="gone" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Email"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="146dp"
        android:visibility="visible"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Password"
        app:met_floatingLabel="highlight"
        android:visibility="visible"
        android:inputType="textPassword"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Sign In"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/butSignIn"
        android:visibility="visible"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
